	background-color: #334155; /* neutral-700 */
	color: #ffffff;
}

.button--neutral:hover {
	background-color: #1e293b; /* neutral-800 */
}

.button--neutral:focus {
	background-color: #0f172a; /* neutral-900 */
}

.button--neutral:disabled {
	background-color: #cbd5e1; /* neutral-300 */
	border-color: #cbd5e1;

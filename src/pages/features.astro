---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresAnalytics = featuresData.filter((feature) => feature.category === 'Analytics')
const featuresProductivity = featuresData.filter((feature) => feature.category === 'Productivity')
const featuresSecurity = featuresData.filter((feature) => feature.category === 'Security')
const featuresIntegrations = featuresData.filter((feature) => feature.category === 'Integrations')
const featuresSupport = featuresData.filter((feature) => feature.category === 'Support')

// Content
// - SEO
const SEO = {
	title: 'WWA | Notre service',
	description:
		"Découvrez le service WWA, mis en pace pour offrir aux étudiants une expérience de candidature/admission post-bac la plus pérènne et propoce à la réussite.  Explorez les fonctionnalités puissantes de Foxi conçues pour améliorer la productivité, garantir une sécurité de premier ordre et s'intégrer parfaitement avec vos outils favoris. Rejoignez des milliers d'utilisateurs satisfaits et transformez votre flux de travail avec Foxi dès aujourd'hui!"
}
// - Page Header
const header = {
	title: 'Notre service, un <strong>accompagnement</strong> vers votre réussite académique.',
	text: 'Fates vous accompagner par des experts de l\'admission universitaire en Chine, au Ghana, en Afrique du Sud et ailleurs'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
		title="Dossier de candidature"
		text="Nous vous aidons à monter votre dossier de candidature suivant les prerequis de chaque voeu d'université et d'école"
		data={featuresAnalytics}
	/>
	<Feature
		title="Candidature(s) optimisé(es)"
		text="Notre équipe d'experts vous aide à optimiser votre candidature en s'assurant que vous ayez toutes les informations nécessaires et que votre dossier soit complet et correct."
		data={featuresSecurity}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Suivi et demande de bourses"
		text="Une veille constante est mise en place et notre équipe se tens prête à fournir tout éléments complémentaires à votre candidature et effectue votre demande de bourse d'étude."
		data={featuresProductivity}
	/>
	<Feature
		title="Choix et admission"
		text="Notre équipe d'experts vous aide à choisir l'université et l'école qui vous correspond et à valider votre admission."
		data={featuresIntegrations}
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
		title="Départ et accueil à l'étranger"
		text="Ca y est vous êtes enfn accepté, votre chox est fait, votre dossier est enregistré et votre bourse est validée, il ne vous reste plus qu'à partir, sur place l'accueil est assuré par un membre de l'équipe WWA"
		data={featuresSupport}
	/>
	<CTA />
</Layout>

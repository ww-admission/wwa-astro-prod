---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'WWA | Contactez-nous',
	description:
		'Have questions or need assistance? Contact Foxi today for support, inquiries, or feedback. Our team is here to help you make the most of your Foxi experience.'
}
// - Page Header
const header = {
	title: 'Des questions ? L\'équipe <strong>WWA</strong> vous réponds.',
	text: "Des questions ou besoin d'assistance ? Contactez World Wide Admission dès aujourd'hui pour obtenir du support, des renseignements ou partager vos retours. Notre équipe est là pour vous aider à tirer le meilleur parti de votre expérience World Wide Admission."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-pink-100 dark:bg-neutral-950/80"
	/>
	<ContactCards classes="dark:bg-neutral-950/80" />
	<SocialProof classes="dark:bg-neutral-950/80" />
	<CTA />
</Layout>
